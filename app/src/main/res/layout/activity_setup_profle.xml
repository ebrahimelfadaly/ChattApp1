<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetupProfle">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/img_profile"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:src="@drawable/ic_image_profile"/>

    <EditText
        android:id="@+id/tv_name_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_name"
        android:gravity="start"
        android:hint="Type of name" />

    <EditText
        android:id="@+id/tv_about_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:drawablePadding="15dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:gravity="start"
        android:hint="About" />
    <EditText
        android:id="@+id/tv_phone_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:gravity="start"
        android:visibility="gone"
        android:hint="Phone Number" />

    <Button
        android:id="@+id/btn_contineu_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"

        android:gravity="center_horizontal"
        android:hint="Contineu"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#F8F1F1"
        android:textSize="22sp"
        android:textStyle="bold"
        />



</LinearLayout>